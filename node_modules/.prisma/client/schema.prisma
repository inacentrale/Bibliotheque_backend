generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int     @id @default(autoincrement())
  name             String
  email            String  @unique
  password         String
  borrowed_book    String?
  return_date      String?
  is_admin         Int     @default(0)
  return_requested Boolean @default(false)
}

model Book {
  id               Int    @id @default(autoincrement())
  title            String
  author           String
  genre            String
  published_year   Int
  available_copies Int
}
